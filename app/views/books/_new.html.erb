      <h2>New book</h2>

      <%= form_with model: book do |f| %>
        <div class="box">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="box">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        </div>
        <h4>
        <%= f.submit 'Create Book' %>
        </h4>
      <% end %>