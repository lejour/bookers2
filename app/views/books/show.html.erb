<div class="container">
  <div class="row">
    <div class="col-md-3">
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>



      <%= render 'users/info', user: @book.user %>

      <%= render 'new', book: @booknew %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
         <table class="table">
              <tbody>
                <tr>
                  <td><%= image_tag @book.user.get_profile_image(80,80) %><%= link_to @book.user.name, user_path(@book.user)  %></td>
                  <td><%= link_to @book.title, book_path %></td>
                  <td><%= @book.body %></td>
                  <td>
                    <% if @book.user == current_user %>
                      <%= link_to "Edit", edit_book_path(@book) %>
                    <% end %>
                  </td>
                  <td>
                    <% if @book.user == current_user %>
                      <%= link_to "Destroy", book_path(@book), method: :delete %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
    </div>
  </div>
</div>