<h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

  <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="box">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="box">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  <h4>
  <%= f.submit 'Create Book' %>
  </h4>
<% end %>

<h2>Book detail</h2>
   <table class="table">
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag 'sample-author1.jpg' %><%= book.user.name %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book) %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>