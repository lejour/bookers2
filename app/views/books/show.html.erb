<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
  <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>

<div class="social">

    <%= link_to edit_user_path(current_user), class: "btn btn-secondary" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
</div>

<h2>New book</h2>



<%= form_with model: @book do |f| %>
  <div class="box">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="box">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>
  <h4>
  <%= f.submit 'Create Book' %>
  </h4>
<% end %>

<h2>Book detail</h2>
   <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(80,80) %><%= @book.user.name %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book) %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>