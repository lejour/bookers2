<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

<div class="social">

    <%= link_to edit_user_path(current_user), class: "btn btn-secondary" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
</div>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <div class="box">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  <div class="box">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>
  <h4>
  <%= f.submit 'Create Book' %>
  </h4>
<% end %>

<h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td>
                <%= user.name %>
            </td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>