<div class="container">
  <div class="row">
    <div class="col-md-3">
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= render 'info', user: current_user %>

      <%= render 'books/new', book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
            <table class="table">
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag user.get_profile_image(80,80) %></td>
                  <td>
                      <%= user.name %>
                  </td>
                  <td><%= link_to "Show", user_path(user) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
    </div>
  </div>
</div>